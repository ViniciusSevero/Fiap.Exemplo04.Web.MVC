
@{
    ViewBag.Title = "Index";
}

<h2>Lista dos melhores alunos</h2>


<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Bolsa</th>
            <th>Desconto</th>
            <th>Data Nascimento</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
<script>
    $(document).ready(function () {
        $.ajax({
            url: "http://localhost:64015/api/Aluno/",
            method: "GET",
            success: function (data) {
                $.each(data, function (idx, item) {
                    var linha = $("<tr>");//cria linha
                    linha.append($("<td>").text(item.Nome));
                    linha.append($("<td>").text(item.Bolsa));
                    linha.append($("<td>").text(item.Desconto));
                    linha.append($("<td>").text(item.DataNascimento));

                    $("tbody").append(linha);
                });

            }
        });
    });
</script>
    }